<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    id="com.tourtrak.geoplugin"
    version="0.1.0">
    <name>iOS Tracker</name>
    <description>iOS Tracker Plugin for TourTrak</description>
    <license>TBD</license>
    <keywords>Cordova,Geolocation Tracker</keywords>
    
    
    <js-module src="www/js/plugins/CDVInterface.js" name="CDVInterface">
        <clobbers target="window.CDVInterface" />
    </js-module>
    
    <dependency id="org.apache.cordova.console" url="https://git-wip-us.apache.org/repos/asf/cordova-plugin-console.git" commit="master"
        />
    <dependency id="org.apache.cordova.network-information" url="https://github.com/apache/cordova-plugin-network-information.git" commit="master"
        />
    <dependency id="org.jboss.aerogear.cordova.push" url="https://github.com/phonegap-build/PushPlugin.git" commit="master"
        />

    <!-- ios -->
    <platform name="ios">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CDVInterface">
                <param name="ios-package" value="CDVInterface" />
            </feature>
        </config-file>

        <!-- CONTROLLER -->

        <!-- Algorithm -->
        <source-file src="Classes/PushAlgorithm.h" target-dir="Classes" />
        <source-file src="Classes/PushAlgorithm.m" target-dir="Classes" />
        <!--CoreLocation -->
        <source-file src="Classes/BGLocationTracking.h" target-dir="Classes" />
        <source-file src="Classes/BGLocationTracking.m" target-dir="Classes" />
        <!-- CoreData -->
        <source-file src="Classes/LocationDBOpenHelper.h" target-dir="Classes" />
        <source-file src="Classes/LocationDBOpenHelper.m" target-dir="Classes"/>
        <!-- POST -->
        <source-file src="Classes/ServiceConnector.h" target-dir="Classes" />
        <source-file src="Classes/ServiceConnector.m" target-dir="Classes" />

        <!-- MODEL -->
        <source-file src="Classes/LocationUpdates.h" target-dir="Classes" />
        <source-file src="Classes/LocationUpdates.m" target-dir="Classes"/>

        <!-- Cordova Interface -->
        <source-file src="Classes/CDVInterface.h" target-dir="Classes"/>
        <source-file src="Classes/CDVInterface.m" target-dir="Classes"/>

    </platform>

</plugin>